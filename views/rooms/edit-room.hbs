<a href="/rooms">Go back</a>

<h2>{{room.name}}</h2>

<div>

  {{#if roomOwner}}
    <div>
      <img src="{{room.imgUrl}}" alt="roompic" />
    </div>

    <div>
      <p>Description: {{room.description}}</p>
      <p>Owner: {{room.owner.username}}</p>
      {{#each room.reviews}}
        Reviews
      {{/each}}
    </div>

    <div>

      <button><a href="/rooms/{{_id}}/edit">Edit</a></button>
      <button><a href="/rooms/{{_id}}/delete">Delete</a></button>

    </div>

  {{else}}
    <div>
      <img src={{imgUrl}} alt="roompic" />
    </div>

    <div>
      <p>Description: {{description}}</p>
      <p>Owner: {{owner.username}}</p>
      {{#each reviews}}
        Reviews
      {{/each}}
    </div>

  {{/if}}

</div>